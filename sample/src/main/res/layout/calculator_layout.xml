<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:columnCount="4"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/btnSlash"
        android:layout_column="3"
        android:text="/" />
    <Button
        android:id="@+id/btn1"
        android:text="1" />
    <Button
        android:id="@+id/btn2"
        android:text="2" />
    <Button
        android:id="@+id/btn3"
        android:text="3" />
    <Button
        android:id="@+id/btnStar"
        android:text="*" />
    <Button
        android:id="@+id/btn4"
        android:text="4" />
    <Button
        android:id="@+id/btn5"
        android:text="5" />
    <Button
        android:id="@+id/btn6"
        android:text="6" />
    <Button
        android:id="@+id/btnMinus"
        android:text="-" />
    <Button
        android:id="@+id/btn7"
        android:text="7" />
    <Button
        android:id="@+id/btn8"
        android:text="8" />
    <Button
        android:id="@+id/btn9"
        android:text="9" />
    <Button
        android:id="@+id/btnPlus"
        android:layout_gravity="fill"
        android:layout_rowSpan="3"
        android:text="+" />

    <Button
        android:id="@+id/btn0"
        android:layout_gravity="fill"
        android:layout_columnSpan="2"
        android:text="0" />

    <ImageButton
        android:id="@+id/imbtnBackspace"
        android:layout_gravity="fill"
        android:layout_columnSpan="1"
        android:src="@drawable/sym_keyboard_delete"/>

    <Button
        android:id="@+id/btnEqual"
        android:layout_gravity="fill"
        android:layout_columnSpan="3"
        android:text="=" />
</GridLayout>